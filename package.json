{
  "name": "proshop",
  "version": "1.0.0",
  "description": "mern shopping app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node back-end/server.js",
    "server": "nodemon back-end/server.js",
    "client": "npm start --prefix front-end",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node back-end/seeder.js",
    "data:destroy": "node back-end/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix front-end && npm run build --prefix front-end"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shafiimam/MERN-Project-Pro-Shop.git"
  },
  "author": "shafi imam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shafiimam/MERN-Project-Pro-Shop/issues"
  },
  "homepage": "https://github.com/shafiimam/MERN-Project-Pro-Shop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  }
}
